<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="BROWSE"
            android:background="@color/adapt_blue"
            android:textColor="#FFFFFF"
            android:id="@+id/browse"
            android:textSize="14sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CREATE"
            android:background="@color/adapt_blue"
            android:textColor="#FFFFFF"
            android:id="@+id/create"
            android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="JOINED"
            android:background="@color/adapt_dark_grey"
            android:textColor="#FFFFFF"
            android:id="@+id/joinedButton"
            android:textSize="14sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="CREATED"
            android:background="@color/adapt_light_grey"
            android:textColor="#FFFFFF"
            android:id="@+id/createdButton"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/subscriptions_container" />
</LinearLayout>
