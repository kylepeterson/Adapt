<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joined Hypotheses"
        android:textColor="@color/adapt_white"
        android:background="@color/adapt_light_grey"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textSize="18dp"
        android:id="@+id/hypTitle"/>
    <ListView android:id="@+id/hypList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created Hypotheses"
        android:textColor="@color/adapt_white"
        android:background="@color/adapt_light_grey"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textSize="18dp"
        android:id="@+id/createdTitle"/>
    <ListView android:id="@+id/createdList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false" />

</LinearLayout>